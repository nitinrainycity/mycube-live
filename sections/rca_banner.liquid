<section class="section-{{ section.id }}-padding">
  <div class="rca_banner_main">
    <div class="rca_banner_details">
      <div class="rca_banner_video">
        <div style="padding:56.25% 0 0 0;position:relative;">
          <iframe
            src="{{ section.settings.iframe }}?autoplay=1&amp;muted=1&amp;playsinline=1&amp;background=1"
            frameborder="0"
            allow="autoplay; fullscreen; picture-in-picture"
            allowfullscreen
            style="position:absolute;top:0;left:0;width:100%;height:100%;"
            title="Mycube 2022"></iframe>
        </div>
        <script src="https://player.vimeo.com/api/player.js"></script>
      </div>
      <div class="rca_banner_content">
        <div class="rca_banner_data">
          <h3>{{ section.settings.title }}</h3>
          {{ section.settings.cont }}
          <div class="rca-theme-btn">
            <a href="{{ section.settings.link }}">{{ section.settings.label }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.6 | round: 0 }}
    px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.6 | round: 0 }}
    px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}
      px;
      padding-bottom: {{ section.settings.padding_bottom }}
      px;
    }
  }
{%- endstyle -%}

{% schema %}
  {
    "name": "RCA Banner",
    "class": "rca-banner",
    "settings": [
      {
        "type": "text",
        "id": "iframe",
        "label": "Video Url"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "cont",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "label",
        "label": "Button Label"
      }, {
        "type": "url",
        "id": "link",
        "label": "Button Link"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 150,
        "step": 10,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 0
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 150,
        "step": 10,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 0
      }
    ],
    "presets": [
      {
        "name": "RCA Banner"
      }
    ]
  }
{% endschema %}