{{ 'rca-categories-section.css' | asset_url | stylesheet_tag }} 
<section id="{{page.handle}}">
	<div class="rca-categories-main rca-categories-fullwidth rca_space{{ section.settings.spacing }}">
		<div class="rca-categories-contain">
			<div class="rca-categories_data">
                <h3 style="color:{{ section.settings.color_content }}">{{ section.settings.heading }}</h3>
                <div class="rca-categories_content">
                    {{ section.settings.content }}
                </div>
                <div class="rca-categories_button">
                    <a href="{{ section.settings.link }}">{{ section.settings.btn }}</a>
                </div>
			</div>
            <div class="rca-categories-details">
                <div class="rca-categories-flex">
                {% for block in section.blocks %}
                    <div class="rca-categories-block">
                        <div class="rca-categories-data">
                            <div class="rca-categories_imgtxt">
                                <a href="{{ block.settings.link }}">
                                    <div class="rca-categories_img" style="background-image: url({{ block.settings.image | img_url :'master' }});">

                                    </div>
                                    <div class="rca-categories_txt">
                                        <p>{{ block.settings.name }}</p>
                                        <p>{{ block.settings.generation }}</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div> 
                {% endfor %}
                </div>
            </div>
		</div>
	</div>
</section>
{%- style -%}
.rca-categories_button p{
    color:{{ section.settings.color_content }};
}
.rca-categories-main{
    background-color:#fcfaf6;
}
{%- endstyle -%}
{% schema %}
{
    "name": "RCA How To Categories",
    "class": "rca-categories-section",
    "settings": [
        {
            "type": "select",
            "id": "spacing",
            "label": "Top and Bottom Space",
            "options": [
                {
                    "value": "top",
                    "label": "Top only"
                },
                {
                    "value": "top_bottom",
                    "label": "Top And Bottom"
                },
                {
                    "value": "bottom",
                    "label": "Bottom Only"
                }
            ],
            "default": "top_bottom"
        },
        {
            "type": "header",
            "content": "Heading Text"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "color",
            "id": "color_heading",
            "label": "Heading Color",
            "default": "#000000"
        },
        {
            "type": "header",
            "content": "Description Text"
        },
		{
			"type": "richtext",
			"id": "content",
			"label": "content"
		},
        {
            "type": "color",
            "id": "color_content",
            "label": "Heading Color",
            "default": "#000000"
        }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Categories",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "header",
                    "content": "Block Data"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                },
                {
                    "type": "text",
                    "id": "btn",
                    "label": "Button"
                },
                {
                    "type": "text",
                    "id": "name",
                    "label": "Tilte"
                },
                {
                    "type": "text",
                    "id": "generation",
                    "label": "Sub Title"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "RCA How To Categories"
        }
    ]
}
{% endschema %}