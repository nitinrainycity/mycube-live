<section>
  <div class="rca_iwt">
    <div class="rca_iwt_main">
      <div class="rca_iwt_data">
        <h3 class="rca_iwt_title">{{ section.settings.title }}</h3>
        <div class="swiper-container rca_iwt_detail">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide rca_iwt_block">
                <div class="rca_iwt_imgtxt">
                  <div class="rca_iwt_img">
                    <img src="{{ block.settings.image | img_url :'master' }}" alt="{{ block.settings.image.alt }}">
                  </div>
                  <h5>{{ block.settings.heading }}</h5>
                  <p>{{ block.settings.content }}</p>
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="swiper-pagination"></div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "RCA Icon with text",
  "class": "rca-icon_with_text",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Items",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "RCA Icon with text"
    }
  ]
}
{% endschema %}
