<section>
  <div class="rca_fts_main">
    <div class="rca_fts_contain">
      <div class="rca_fts_heading">
        <div class="rca_fts_content">
          <div class="fts_box">
            <p id="p_desc"></p>
          </div>
          <div class="fts_box">
            <h4 id="p_name"></h4>
          </div>
          <div class="rca_fts_link">
            <a id="p_url" href="">
              {{ section.settings.btn }}

              <div class="arrow-base">
                <div class="arrow-line"></div>
                <div class="arrow-head arrow-head--right"></div>
              </div>
            </a>
          </div>
        </div>
      </div>
      <div class="rca_fts_slide">
        <div class="swiper-container rca_swiper_tab">
          <!-- swiper slides -->
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div
                class="swiper-slide"
                alt="{{ block.settings.imagealt }}"
                description="{{ block.settings.description }}"
                data_url="{{ block.settings.link }}"
              >
                <div class="rca_fts_img">
                  <img src="{{ block.settings.image | img_url :'master' }}">
                </div>
              </div>
            {% endfor %}
          </div>
          <!-- next / prev arrows -->
          <div class="swiper-button-next" style="display:flex;"></div>
          <div class="swiper-button-prev" style="display:flex;"></div>
          <!-- !next / prev arrows -->

          <!-- pagination dots -->
          <div class="swiper-pagination"></div>
          <!-- !pagination dots -->
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "RCA Featured Tabs",
  "class": "rca-featured_tabs",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "btn",
      "label": "Link Name"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "imagealt",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "RCA Featured Tabs"
    }
  ]
}
{% endschema %}
