<section>
	<div class="iwt_main" style ="{%- if section.settings.bgcolor or section.settings.opacity != blank -%} background:{{ section.settings.bgcolor | color_modify: 'alpha', section.settings.opacity }};{%- endif -%} {%- if section.settings.imageback != blank -%}  background-image:url({{ section.settings.imageback | img_url :'master' }});background-size: cover;background-repeat: no-repeat;{%- endif -%}">
		<div class="iwt_contain">
			<div class="iwt_heading">
                {% if product.metafields.custom.bottom_logo_section_heading != blank %}<h3 style="color:{{ section.settings.color_heading }}">{{ product.metafields.custom.bottom_logo_section_heading }}</h3>{% endif %}
                <p style="color:{{ section.settings.color_content }}">{{ section.settings.content }}</p>
			</div>
			<div class="iwt_detail iwi_detail{{ section.settings.width }}" data-flickity='{ "initialIndex":1, "cellAlign": "left", "contain": true, "pageDots": true, "prevNextButtons": false}'>
			{% for block in section.blocks %}
				<div class="iwt_block">
					<a href="{{ block.settings.link }}">
						<div class="iwt_imgtxt">
                            {% if block.settings.image != blank %}
                                <div class="iwt_img">
                                    <img src="{{ block.settings.image | img_url :'master' }}" alt ="{{ block.settings.image.alt }}">
                                </div>
                            {% endif %}
                            {% if block.settings.imagesvg != blank %}
                                <div class="iwt_img">
                                    {{ block.settings.imagesvg }}
                                </div>
                            {% endif %}
							<p style="color:{{ block.settings.color_title }}">{{ block.settings.contentinner }}</p>
						</div>
					</a>
				</div>
  
			{% endfor %}
			</div>

		</div>
	</div>
</section>
<style>
.iwt_main{
    background-image:url({{ section.settings.imageback | img_url :'master' }});
}

</style>

{% schema %}
{
    "name": "Icons with text",
    "class": "rca-icon-with-text",
    "settings": [
        {
            "type": "header",
            "content": "Text"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "color",
            "id": "color_heading",
            "label": "Heading Color",
            "default": "#0039A6"
        },
		{
			"type": "richtext",
			"id": "content",
			"label": "content"
		},
        {
            "type": "header",
            "content": "Config"
        },
        {
            "type": "color",
            "id": "color_content",
            "label": "Heading Color",
            "default": "#0039A6"
        },
        {
			"type": "color",
			"id": "bgcolor",
			"label": "Section Background Color",
            "default": "#FFFFFF"
		},
        {
          "type":      "range",
          "id":        "opacity",
          "min":        0,
          "max":        1,
          "step":       0.1,
          "label":     "Opacity",
          "default":   0
        },
        {
            "type": "image_picker",
            "id": "imageback",
            "label": "Image"
        },
        {
        "type": "select",
        "id": "width",
        "options": [
            {
                "value": "three",
                "label": "Three"
            },
            {
                "value": "four",
                "label": "Four"
            },
            {
                "value": "five", 
                "label": "Five"
            },
            {
                "value": "six",
                "label": "Six"
            }
        ],
            "default": "four",
            "label": "Items Display"
        }
    ],
    "blocks": [
    {
        "type": "image",
        "name": "Slide",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "html",
                "id": "imagesvg",
                "label": "Svg icon"
            },
			{
                "type": "text",
                "id": "contentinner",
                "label": "Title"
            },
			{
                "type": "url",
                "id": "link",
                "label": "Link"
            },
            {
                "type": "color",
                "id": "color_title",
                "label": "Title Color",
                "default": "#0039A6"
            }
        ]
    }
  ],
    "presets": [
        {
            "name": "Icons with text"
        }
    ]
}
{% endschema %}