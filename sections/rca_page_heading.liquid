{{ 'rca_page_heading.css' | asset_url | stylesheet_tag }} 
<section id="{{page.handle}}" class="section-{{ section.id }}-padding">
	<div class="rca_page_heading_main rca_page_heading_text{{ section.settings.pos }}" style ="{%- if section.settings.bgcolor or section.settings.opacity != blank -%} background:{{ section.settings.bgcolor | color_modify: 'alpha', section.settings.opacity }};{%- endif -%} {%- if section.settings.imageback != blank -%}  background-image:url({{ section.settings.imageback | img_url :'master' }});background-size: cover;background-repeat: no-repeat;{%- endif -%}">
		<div class="rca_page_heading_contain">
			<div class="rca_page_heading_data">
                <h3 style="color:{{ section.settings.color_content }}">{{ section.settings.heading }}</h3>
                <div class="rca_page_heading_content">
                    {{ section.settings.content }}
                </div>
                <div class="rca_page_heading_button">
                    <a href="{{ section.settings.link }}">{{ section.settings.btn }}</a>
                </div>
			</div>
		</div>
	</div>
</section>
{%- style -%}
.rca_page_heading_main{
    background-image:url({{ section.settings.imageback | img_url :'master' }});
}
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.6 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.6 | round: 0 }}px;
}
.rca_page_heading_content p{
    color:{{ section.settings.color_content }};
}
@media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
}
{%- endstyle -%}

{% schema %}
{
    "name": "RCA Page Heading",
    "class": "rca-page-headinge",
    "settings": [
        {
            "type": "header",
            "content": "Heading Text"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "color",
            "id": "color_heading",
            "label": "Heading Color",
            "default": "#000000"
        },
        {
            "type": "header",
            "content": "Description Text"
        },
		{
			"type": "richtext",
			"id": "content",
			"label": "content"
		},
        {
            "type": "color",
            "id": "color_content",
            "label": "Heading Color",
            "default": "#000000"
        },
        {
            "type": "header",
            "content": "Button Data"
        },
        {
            "type": "url",
            "id": "link",
            "label": "Link"
        },
        {
            "type": "text",
            "id": "btn",
            "label": "Button"
        },
        {
            "type": "header",
            "content": "Section Setting"
        },
        {
			"type": "color",
			"id": "bgcolor",
			"label": "Section Background Color",
            "default": "#FFFFFF"
		},
        {
            "type":      "range",
            "id":        "opacity",
            "min":        0,
            "max":        1,
            "step":       0.1,
            "label":     "Opacity",
            "default":   0
        },
        {
            "type": "select",
            "id": "pos",
            "options": [
                {
                    "value": "left",
                    "label": "Text Left"
                },
                {
                    "value": "center", 
                    "label": "Text Center"
                },
                {
                    "value": "right", 
                    "label": "Text Right"
                }
            ],
            "default": "center",
            "label": "Text Position"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 150,
            "step": 10,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 150,
            "step": 10,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 0
        }
    ],
    "presets": [
        {
            "name": "RCA Page Heading"
        }
    ]
}
{% endschema %}